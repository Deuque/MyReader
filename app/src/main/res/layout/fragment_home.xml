<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:animateLayoutChanges="true"
    android:background="@color/aux1">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/img4"-->
    <!--android:scaleType="fitXY"-->
    <!--android:alpha="0.2"/>-->
    <android.support.v7.widget.CardView
        android:id="@+id/dashbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/aux1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="3dp"
            android:paddingEnd="5dp"
            android:background="@android:color/transparent"
            >

            <LinearLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/cimg"
                    android:src="@drawable/contact2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_gravity="center_vertical"/>
                <!--<ImageView-->
                    <!--android:id="@+id/rand"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/drop"-->
                    <!--android:layout_marginLeft="-6dp"-->
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/aux5"
                android:fontFamily="@font/patua_one"
                android:text="Hello User!"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:tint="@color/aux5"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dashbar"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/recent"
                android:orientation="vertical"
                android:animateLayoutChanges="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/recent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/poppins"
                    android:text="Recent"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/norecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/norecent"
                    android:drawablePadding="5dp"
                    android:textSize="15sp"
                    android:text="No Recent Files"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/aux3"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/create"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:backgroundTint="@color/aux1"
                        android:layout_toEndOf="@id/upload">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="6dp">
                            <ImageView
                                android:id="@+id/crimg"
                                android:layout_width="250dp"
                                android:layout_height="149dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/hm2"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:textSize="15sp"
                                android:text="Split Documents"
                                android:textColor="@color/aux1"
                                android:background="@drawable/bgshape5"
                                android:drawableLeft="@drawable/cut"
                                android:drawableTint="@color/aux1"
                                android:drawablePadding="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="end"
                                android:elevation="3dp"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:textSize="14sp"
                                android:text="@string/paste_word"
                                android:maxWidth="200dp"
                                android:textColor="@color/aux2"
                                android:padding="5dp"
                                android:gravity="end"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/upload"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/aux1"
                        android:layout_margin="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/selimg"
                                android:layout_width="250dp"
                                android:layout_height="149dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/hm1"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:textSize="15sp"
                                android:text="Select Document"
                                android:textColor="@color/aux1"
                                android:background="@drawable/bgshape5"
                                android:drawableLeft="@drawable/file"
                                android:drawableTint="@color/aux1"
                                android:drawablePadding="5dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="end"
                                android:elevation="3dp"
                                android:layout_marginBottom="2dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:textSize="14sp"
                                android:text="@string/upload_word"
                                android:maxWidth="200dp"
                                android:textColor="@color/aux2"
                                android:padding="5dp"
                                android:gravity="end"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </HorizontalScrollView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
