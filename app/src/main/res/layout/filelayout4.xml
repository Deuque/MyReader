<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:background="@drawable/bgshape10"
        android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="10dp"
        android:elevation="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:src="@mipmap/bgm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:maxLines="3"
            android:layout_margin="10dp"
            android:text="Advanced Digital Laboratory in perforated reearch stu "
            android:textAlignment="center"
            android:textColor="@color/aux5"
            android:textSize="17sp"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="pdf"
        android:textSize="10sp"
        android:textColor="@color/aux1"
        android:background="@drawable/bgshape6"
        android:paddingStart="2dp"
        android:paddingEnd="4dp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>





